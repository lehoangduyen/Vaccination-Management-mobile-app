<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_linearLayout_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        >
        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_date_view"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_num_order"
                style="@style/text_date_view_dd"
                android:layout_gravity="center_horizontal"
                android:text="1"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_show_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/ic_spinner_arrow_down"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_person" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_name" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_time" />

            <TextView
                android:id="@+id/tv_shift"
                style="@style/text_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_card" />

            <TextView
                android:id="@+id/tv_id"
                style="@style/text_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_more_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/btn_view_profile"
                style="@style/btn_primary_hor_line"
                android:text="Hồ sơ"
                />

            <Button
                android:id="@+id/btn_check_in"
                style="@style/btn_secondary_hor_line"
                android:text="Điểm danh"
                />

            <Button
                android:id="@+id/btn_inject"
                style="@style/btn_secondary_hor_line"
                android:text="Tiêm"
                />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/btn_secondary_hor_line"
                android:text="Hủy tiêm"/>
        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>