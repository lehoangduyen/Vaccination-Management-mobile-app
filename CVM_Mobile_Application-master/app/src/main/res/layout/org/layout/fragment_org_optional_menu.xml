<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.org.info.OrgProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_avatar_org"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bệnh viện Đa khoa Dầu Tiếng"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="22sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_home"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_screen_horizontal"
            android:paddingVertical="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_tab_profile"
                    style="@style/linear_layout_for_option_menu">
                    <LinearLayout
                        android:background="@drawable/ic_infomation"
                        style="@style/iconFor_item_menu_info"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/labelFor_item_menu_info"
                            android:text="Thông tin đơn vị" />
                    </LinearLayout>

                    <LinearLayout style="@style/icon_arrow_forward"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_under_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/linear_layout_for_option_menu">
                    <LinearLayout
                        android:background="@drawable/ic_info"
                        style="@style/iconFor_item_menu_info"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            style="@style/labelFor_item_menu_info"
                            android:text="Thông tin tài khoản" />
                    </LinearLayout>

                    <LinearLayout style="@style/icon_arrow_forward"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_under_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/linear_layout_for_option_menu">
                    <LinearLayout
                        android:background="@drawable/ic_settings"
                        style="@style/iconFor_item_menu_info"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            style="@style/labelFor_item_menu_info"
                            android:text="Cài đặt" />
                    </LinearLayout>

                    <LinearLayout style="@style/icon_arrow_forward"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_under_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_tab_logout"
                    style="@style/linear_layout_for_option_menu">
                    <LinearLayout
                        android:background="@drawable/ic_logout"
                        style="@style/iconFor_item_menu_info"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            style="@style/labelFor_item_menu_info"
                            android:text="Đăng xuất" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_under_text"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>